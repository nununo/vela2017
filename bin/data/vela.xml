<vela2017>
  <general>
    <framerate>50</framerate>
    <fullscreen>1</fullscreen>
    <useOmxPlayer>1</useOmxPlayer>
  </general>
  <history>
    <bufferSize>300</bufferSize>
    <chartHeight>300</chartHeight>
  </history>
  <clipOutput>
    <zoomX>1.0</zoomX>
    <zoomY>1.0</zoomY>
    <color>FFFFFF</color>
  </clipOutput>
  <inputs>
    <input type="keyboard" enabled="1"/>
    <input type="arduino" device="tty.usbmodem1411" devicePi="ttyACM0" enabled="1" inverted="0">
      <low>7</low>
      <high>75</high>
      <blowOut>400</blowOut>
    </input>
    <input type="autoFlicker" enabled="0">
      <minPeriod>10000</minPeriod>
    </input>
    <input type="mouse" enabled="0" inverted="0">
      <low>10</low>
      <high>50</high>
      <blowOut>200</blowOut>
    </input>
  </inputs>
  <layers>
    <layer type="info" visible="1">
      <offsetX>40</offsetX>
      <offsetY>80</offsetY> 
      <rotated180>1</rotated180>
      <portraitMode>1</portraitMode>
    </layer>
  	<layer type="history" visible="1">
      <offsetX>40</offsetX>
      <offsetY>400</offsetY>
      <rotated180>1</rotated180>
      <portraitMode>1</portraitMode>
    </layer>
    <layer type="clip" visible="1">
      <offsetX>0</offsetX>
      <offsetY>0</offsetY>
      <rotated180>1</rotated180>
      <portraitMode>0</portraitMode>
    </layer>
  </layers>
  <levels>
    <level type="onDemand">
      <movieFolder>media/0</movieFolder>
      <fadeInTime>0</fadeInTime>
      <loop>1</loop>
      <cannotRestartTime>0</cannotRestartTime>
    </level>
    <level type="preload">
      <movieFolder>media/1</movieFolder>
      <fadeOutTime>0.50</fadeOutTime>
      <loop>0</loop>
      <cannotRestartTime>1</cannotRestartTime>
    </level>
    <level type="preload">
      <movieFolder>media/2</movieFolder>
      <fadeOutTime>0.50</fadeOutTime>
      <loop>0</loop>
      <cannotRestartTime>1</cannotRestartTime>
    </level>
    <level type="preload">
      <movieFolder>media/3</movieFolder>
      <fadeOutTime>3.00</fadeOutTime>
      <loop>0</loop>
      <cannotRestartTime>100</cannotRestartTime>
    </level>
  </levels>
</vela2017>
