<vela2017>
  <general>
    <framerate>50</framerate>
    <fullscreen>1</fullscreen>
    <useOmxPlayer>1</useOmxPlayer>
  </general>
  <history>
    <bufferSize>300</bufferSize>
    <chartHeight>300</chartHeight>
  </history>
  <clipOutput>
    <zoomX>1.0</zoomX>
    <zoomY>1.0</zoomY>
  </clipOutput>
  <arduino>
    <device name="mac">cu.usbmodem1411</device>
    <device name="pi">/dev/ttyUSB0</device>
  </arduino>
  <levels>
    <level>
      <movieFolder>media/0</movieFolder>
      <fadeInTime>0</fadeInTime>
      <fadeOutTime>0</fadeOutTime>
      <loop>1</loop>
      <canRestart>0</canRestart>
    </level>
    <level>
      <movieFolder>media/1</movieFolder>
      <fadeInTime>0.15</fadeInTime>
      <fadeOutTime>0.50</fadeOutTime>
      <loop>0</loop>
      <canRestart>1</canRestart>
    </level>
    <level>
      <movieFolder>media/2</movieFolder>
      <fadeInTime>0.15</fadeInTime>
      <fadeOutTime>0.50</fadeOutTime>
      <loop>0</loop>
      <canRestart>1</canRestart>
    </level>
    <level>
      <movieFolder>media/3</movieFolder>
      <fadeInTime>0.15</fadeInTime>
      <fadeOutTime>2.00</fadeOutTime>
      <loop>0</loop>
      <canRestart>0</canRestart>
    </level>
  </levels>
  <calibration>
    <bufferSize>100</bufferSize>
    <excentricSize>25</excentricSize>
    <skipSize>1</skipSize>
  </calibration>
  <inputs>
    <input type="keyboard" enabled="1"/>
    <input type="mouse" enabled="1" inverted="0" calibrated="1">
      <low>100</low>
      <high>200</high>
      <blowOut>300</blowOut>
    </input>
    <input type="autoFlicker" enabled="0">
      <minPeriod>10000</minPeriod>
    </input>
    <input type="arduino" name="arduino.left" id="0" enabled="1" inverted="1" calibrated="1">
      <low>3</low>
      <high>7</high>
      <blowOut>15</blowOut>
    </input>
    <input type="arduino" name="arduino.right" id="1" enabled="0" inverted="1" calibrated="1">
      <low>5</low>
      <high>15</high>
      <blowOut>30</blowOut>
    </input>
    <input type="arduino" name="arduino.top" id="2" enabled="0" inverted="1" calibrated="1">
      <low>-5</low>
      <high>15</high>
      <blowOut>30</blowOut>
    </input>
  </inputs>
  <layers>
  	<layer type="info" visible="1">
      <offsetX>0</offsetX>
      <offsetY>0</offsetY> 
      <rotated180>0</rotated180>
      <portraitMode>0</portraitMode>
    </layer>
  	<layer type="history" visible="1">
      <offsetX>0</offsetX>
      <offsetY>600</offsetY>
      <rotated180>0</rotated180>
      <portraitMode>0</portraitMode>
    </layer>
    <layer type="clip" visible="1">
      <offsetX>0</offsetX>
      <offsetY>0</offsetY>
      <rotated180>0</rotated180>
      <portraitMode>0</portraitMode>
    </layer>
  </layers>
</vela2017>
